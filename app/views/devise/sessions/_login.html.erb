<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "navbar-form pull-right") do |f| %>
  <div><%= f.email_field :email, :class => "span2", :placeholder => "e-mail" %></div>

  <div><%= f.password_field :password, :class => "span2", :placeholder => "senha" %></div>

  <div><%= f.submit "Ok", :class => "btn" %></div>
<% end %>


