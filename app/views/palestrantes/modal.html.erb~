<div class="page-header">
  <h3>Cadastro Modal de palestrante</h3>
</div>
<%= form_for @palestrante, :html => { :class => 'form-horizontal', :remote => } do |f| %>

  <% if @palestrante.errors.any? %>
    <div id="error_explanation">
      <h2>
      	<% if @palestrante.errors.count > 1 %>
	      	<%= pluralize(@palestrante.errors.count, "erro") %> impediram que este palestrante fosse cadastrado:
	      <% else %>	
		      <%= pluralize(@palestrante.errors.count, "erro") %> impediu que este palestrante fosse cadastrado:
	      <% end %>
    	</h2>

      <ul>
      <% @palestrante.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="control-group">
    <%= f.label 'Nome completo', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Instituição', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :institution, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :lattes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :lattes, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Cadastrar', :class => 'btn btn-primary' %>
    <%= link_to 'Cancelar',
                palestrantes_path, :class => 'btn' %>
  </div>
<% end %>
